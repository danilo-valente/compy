{
  "lint": {
    "include": ["src/**/*.ts", "*.ts"],
    "exclude": ["example/", "fixtures/", "node_modules/"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["require-await", "no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/**/*.ts", "*.ts"],
    "exclude": ["example/", "fixtures/", "node_modules/"]
  },
  "test": {
    "include": ["spec/"],
    "exclude": ["example/"]
  },
  "imports": {
    "std/": "https://deno.land/std@v0.200.0/",
    "zod/": "https://deno.land/x/zod@v3.22.2/"
  }
}
